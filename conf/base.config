// ============================================================================
// Base Configuration for scRNA-seq Pipeline
// ============================================================================
// Includes default process resource allocations and labels

process {
    // Default CPU and memory for all processes
    cpus = 1
    memory = 4.GB
    time = 1.h

    // Label-based resource configuration
    withLabel: process_single {
        cpus = 1
        memory = 4.GB
        time = 10.m
    }

    withLabel: process_high {
        cpus = 8
        memory = 16.GB
        time = 4.h
    }
}
